/* 底部内容容器 */
.button_container{
  height: calc(100vh - 600rpx - 30rpx);
  padding: 30rpx 0 0 30rpx;
  width: calc(100vw - 30rpx);
}
/* 标题 */
.audioTitle{
  padding: 0 0 8rpx 0;
  margin: 16rpx 0 0 0;
  width: 100%;
}
.keywords-container{
  display: flex;
  font-size: 24rpx;
  flex-wrap: wrap;
}
.keywords-item{
  padding: 4rpx 8rpx;
  background-color: rgba(0, 0, 0, 0.1);
  margin: 8rpx;
}
/* 详细内容 */
.button_container-content{
  font-size: 28rpx;
  margin: 16rpx 16rpx 30rpx 0;
}
.button_container-content-title{
  font-size: 32rpx;
}
.otherInformationItem{
  padding: 8rpx 0;
}
/* 被选中 */
.haveUrl{
  color: #337ab7;
  text-decoration: underline;
}
/* 主持人容器 */
.audioSingerContainer{
  width: 100%;
  display: flex;
  font-size: 28rpx;
  flex-wrap: wrap;
  margin: 0 0 30rpx 0;
}
/* 主持人子容器 */
.singerItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 30rpx 16rpx 0;
  flex: 1;
  min-width: 150rpx;
}
/* 头像 */
.audioSingerIcon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #ededed;
}
/* 身份 */
.Identity{
  background-color: #e23f3e;
  color: #fff;
  padding: 0 8rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
}
.guest .Identity{
  background-color: #337ab7;
}
.footer{
  height: 70rpx;
}