/**index.wxss**/
.selogan{
  margin: 0 auto;
  padding: 60rpx 0 0 0;
  writing-mode:tb-rl;    
  opacity: 0;  
}
.selogan text{
  color: #000;
  transition: color 0.3s;
}
.selogan .right{
  margin: 200rpx 0 0 0;
}
.enterContainer{
  margin: 30rpx auto 0 auto;
  text-align: center;
  opacity: 0;
}
.enter-img{
  width: 200.4rpx;
  height: 132.8rpx;
}
.enter-button{
  background-color: inherit;
  border: 2rpx solid #000;
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-radius: 0;
}
.enter-button::after {
  border-radius: 0;
}

.footer{
  text-align: center;
  position: absolute;
  bottom: 16rpx;
  left: 0px;
  right: 0px;
  margin: auto;
}
.logo{
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.footer .url{
  color: #000;
  left: 0px;
  bottom: 0px;
  font-size: 16px;
}