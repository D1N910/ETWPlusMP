/* pages/index/index.wxss */
.swiper-container{
  width: calc(100% - 60rpx);
  height: 400rpx;
  background-color: #f3f3f3;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.swiper-container swiper-item{
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.audioInformation-container{
  width: 100%;
  height: 100%; 
  position: absolute;
  left: 0px;
  top: 0px;
}
.audioInformation-container .audioInformation-title{
  text-overflow:ellipsis;
  overflow: hidden;
  word-break: keep-all;
  white-space: nowrap;
  color: #fff;
  font-weight: bolder;
  position: absolute;
  font-size: 32rpx;
  bottom: 0px;
  width: 100%;
  height: 80rpx;
  line-height: 90rpx;
  text-indent: 16rpx;
  background: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.3));
}
.audioInformation-audioId{
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  color: #fff;
  font-size: 70rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
}

.swiper-container swiper-item image{
  width: 100%;
}

.weui-loadmore {
  width: 100%;
  height: 0;
  overflow: hidden;
  transition: all 0.3s;
  position: relative;
}
.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
.loading{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 0px;
  right: 0px;
  margin: 0 auto;
}