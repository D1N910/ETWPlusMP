<!--pages/audioPage/index.wxml-->
<view class="container">
  <view class="play-tc">
    <view
      class="topOuterBorder"
      animation="{{topOuterBorderAn}}"></view>      
      <!-- 播放器容器 -->
    <view
      class="vudioPlayer-container"
      bindtap="handleVudiPlayertap">
        <image   
          mode="aspectFill"
          class="vudioPlayer-cover"
          src="{{coverImage}}"
          bindload="haveLoad">
        </image>
        <image
          wx:if="{{!logoVisiable}}"        
          mode="aspectFill"
          class="vudioPlayer-cover-show"
          src="{{coverImage}}">
        </image>
        <image
          wx:if="{{logoVisiable}}"
          class="vudioPlayer-cover-logo-show"        
          src="../../static/logo.jpg">
        </image>
    </view>
      <!-- 播放器控制容器 -->
    <view
      animation="{{controllerAn}}"      
      class="vudioPlayer-controller_contianer">
      <!-- 播放控制按钮容器 -->    
      <view
        class="vudioPlayer-controller">
        <!-- 点击播放 -->
        <text
          class="iconfont icon-play controller-button"
          bindtap="handlePlay"
          wx:if="{{playStatus && ifShowLoading}}"
          ></text>
        <!-- 点击暂停 -->            
        <text
          bindtap="handlePause"
          class="iconfont icon-pause controller-button"
          wx:if="{{!playStatus && ifShowLoading}}"            
          ></text>
        <!-- 显示加载 -->
          <text
            class="controller-button weuiLoading"
            wx:if="{{!ifShowLoading}}"            
          ></text>
      </view>
      <!-- 显示播放进度 -->
      <view
        class="progressBar">
        <slider
          class="playSlider"
          bindchanging="handleChangeing"
          bindchange="handleSliderChange"
          activeColor="#fd4337"
          backgroundColor="rgba(255,255,255,0)"
          value="{{playPosition}}"
          min="0"
          max="{{maxLength}}"
          block-size="14"/>
        <!-- 缓冲条 -->
        <progress
          class="playProgress"        
          activeColor="rgba(255,255,255,0.7)"
          backgroundColor="rgba(255,255,255,0.3)"
          stroke-width="2"
          percent="{{percent}}"
          active />
      </view>
      <view class="audio-time">
        <view
          wx:if="{{allTime!=''}}"
        >{{onTimeUpdate}} / {{allTime}}</view>
      </view>
    </view>
  </view>
    <!-- 底部内容容器 -->
    <scroll-view>
      <view
        class="audioTitle">
        {{audioTitle}}
      </view>
      <view
        class="audioSinger">
        {{audioSinger}}
      </view>
    </scroll-view>
</view>
