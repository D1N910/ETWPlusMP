<!--pages/audioPage/index.wxml-->
<view class="container">
  <view class="play-tc">
    <!-- 顶部容器 -->
    <view
      class="topOuterBorder {{hiddenController?'':'topOuterBorderShow'}}">
        <!-- 状态栏撑高 -->
      <view
        style="height:{{topStatus}}px;"></view>
      <view
        class="navigationBar"
        style="height:{{capsuleHeight}}px;">
          <view
            class="navigationController">
            <!-- 返回 -->
            <i
              wx:if="{{pageLength>1}}"
              data-status="-1"
              bindtap="navigateTo"
              class="iconfont icon-fanhui"></i>
            <!-- 回到主页 -->            
            <i
              data-status="999"            
              bindtap="navigateTo"            
              class="iconfont icon-shouye"></i>  
          </view>
        </view>
      </view>      
      <!-- 播放器容器 -->
    <view
      class="vudioPlayer-container"
      bindtap="handleVudiPlayertap">
        <image   
          mode="aspectFill"
          class="vudioPlayer-cover"
          src="{{audioInformationList.header}}"
          bindload="haveLoad">
        </image>
        <image
          wx:if="{{!logoVisiable}}"        
          mode="aspectFill"
          class="vudioPlayer-cover-show"
          src="{{audioInformationList.header}}">
        </image>
        <image
          wx:if="{{logoVisiable}}"
          class="vudioPlayer-cover-logo-show"        
          src="../../static/logo.jpg">
        </image>
    </view>
      <!-- 播放器控制容器 -->
    <view
      class="vudioPlayer-controller_contianer {{hiddenController?'':'controllerShow'}}">
      <!-- 播放控制按钮容器 -->    
      <view
        class="vudioPlayer-controller">
        <!-- 点击播放 -->
        <text
          class="iconfont icon-play controller-button"
          bindtap="handlePlay"
          wx:if="{{playStatus && ifShowLoading}}"
          ></text>
        <!-- 点击暂停 -->            
        <text
          bindtap="handlePause"
          class="iconfont icon-pause controller-button"
          wx:if="{{!playStatus && ifShowLoading}}"            
          ></text>
        <!-- 显示加载 -->
          <text
            class="controller-button weuiLoading"
            wx:if="{{!ifShowLoading}}"            
          ></text>
      </view>
      <!-- 显示播放进度 -->
      <view
        class="progressBar">
        <slider
          class="playSlider"
          bindchanging="handleChangeing"
          bindchange="handleSliderChange"
          activeColor="#fd4337"
          backgroundColor="rgba(255,255,255,0)"
          value="{{playPosition}}"
          min="0"
          max="{{maxLength}}"
          block-size="14"/>
        <!-- 缓冲条 -->
        <progress
          class="playProgress"        
          activeColor="rgba(255,255,255,0.7)"
          backgroundColor="rgba(255,255,255,0.3)"
          stroke-width="2"
          percent="{{percent}}"
          active />
      </view>
      <view class="audio-time">
        <view
          wx:if="{{allTime!=''}}"
        >{{onTimeUpdate}} / {{allTime}}</view>
      </view>
    </view>
  </view>
    <!-- 底部内容容器 -->
    <scroll-view
      scroll-y="true"
      class="button_container"
      wx:if="{{audioInformationList.title}}">
      <view>

      </view>
      <!-- 标题 -->
      <view
        class="audioTitle">
        {{audioInformationList.title}}
      </view>
      <view
        class='time'>
        {{audioInformationList.pubDate}}
      </view>
      <!-- 关键词 -->
      <view
        class="keywords-container">
        <view
          class="keywords-item"
          wx:for="{{audioInformationList.keywords}}"
          wx:key="index">
          {{item}}
        </view>          
      </view>
      <!-- 详细内容 -->
      <view
        class="button_container-content">
        <view
          class="button_container-content-title">
          ABOUT THIS EPISODE
        </view>
        {{audioInformationList.about}}
      </view>
      <!-- 其他内容 -->
      <view
        class="button_container-content"
        wx:for="{{audioInformationList.relatedInformation}}"
        wx:key="index1">
        <view
          class="button_container-content-title">
        {{item.title}}
        </view>
        <view
          wx:for="{{item.content}}"
          wx:key="index2"
          class="otherInformationItem {{item.url!='0'?'haveUrl':''}}"
          bindtap="copyUrl"
          data-url="{{item.url}}">
          {{item.title}}
          <!-- {{item.url}} -->
        </view>
      </view>
      <!-- 节目出声 -->
      <view
        class="audioSingerContainer">
        <block
          wx:for="{{audioInformationList.participant.host}}"
          wx:key="item">
          <view class="singerItem">
            <image
              mode="widthFix"
              class="audioSingerIcon"
              src="{{item.icon}}">
            </image>
            <view>
              {{item.name}}
            </view>
            <view
              class="Identity">
              EPISODE HOST
            </view>
          </view>
        </block>
        <block
          wx:for="{{audioInformationList.participant.guest}}"
          wx:key="item">
          <view class="singerItem guest">
            <image
              mode="widthFix"
              class="audioSingerIcon"
              src="{{item.icon}}">
            </image>
            <view>
              {{item.name}}
            </view>
            <view
              class="Identity">
              SPECIAL GUEST
            </view>
          </view>
        </block>
      </view>
      <view class="footer">
      </view>
    </scroll-view>
</view>
