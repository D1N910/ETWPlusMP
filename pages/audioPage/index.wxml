<!--pages/audioPage/index.wxml-->
<view class="container">
    <!-- 播放器容器 -->
    <view
      class="vudioPlayer-container">
        <view class="topOuterBorder"></view>      
        <image   
          mode="aspectFill"
          class="vudioPlayer-cover"
          src="{{coverImage}}"
          bindload="haveLoad">
        </image>
        <image
          wx:if="{{!logoVisiable}}"        
          mode="aspectFill"
          class="vudioPlayer-cover-show"
          src="{{coverImage}}">
        </image>
        <image
          wx:if="{{logoVisiable}}"
          class="vudioPlayer-cover-logo-show"        
          src="../../static/logo.jpg">
        </image>
    </view>
    <!-- 播放器控制容器 -->
    <view class="vudioPlayer-controller_contianer">
      <!-- 播放控制按钮容器 -->    
      <view
        class="vudioPlayer-controller">
        <!-- 点击播放 -->
        <text
          class="iconfont icon-play controller-button"
          bindtap="handlePlay"
          hidden="{{!playStatus|| !ifShowLoading}}"
          ></text>
        <!-- 点击暂停 -->            
        <text
          bindtap="handlePause"
          class="iconfont icon-pause controller-button"
          hidden="{{playStatus || !ifShowLoading}}"            
          ></text>
        <!-- 显示加载 -->
          <text
            class="controller-button weuiLoading"
            wx:if="{{!ifShowLoading}}"            
          ></text>
      </view>
      <!-- 显示播放进度 -->
      <slider
        class="progressBar"
        bindchanging="handleChangeing"
        bindchange="handleSliderChange"
        activeColor="#fd4337"
        backgroundColor="rgba(255,255,255,0.3)"
        value="{{playPosition}}"
        min="0"
        max="{{maxLength}}"
        block-size="14"/>
        <view class="audio-time">
          {{onTimeUpdate}} / {{allTime}}
        </view>
    </view>
</view>
