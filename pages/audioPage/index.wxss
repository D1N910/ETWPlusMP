.container{
  min-height: 100vh;
  padding-bottom: 0rpx;
}
/* pages/audioPage/index.wxss */
.play-tc{
  width: 100vw;
  height: 600rpx;
  position: relative;
  overflow: hidden;  
}
/* 音频显示容器 */
.vudioPlayer-container{
  width: 100%;
  height: 600rpx;
  position: relative;
  overflow: hidden;
  background-color: #f3f3f3;
}
.header-avator{
  position: relative;
  height: 100%;
}
/* 音频图片 */
.vudioPlayer-cover-show{
  width: 100vw;
  height: 100%;
  position: absolute;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  margin: auto;
  z-index: 2；  
}
/* 缓冲图片 */
.vudioPlayer-cover-logo-show{
  width: 340rpx;
  height: 340rpx;
  position: absolute;  
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  margin: auto;
  opacity: 0.3;
  z-index: 1；
}

/* 音频播放控制器 */
.vudioPlayer-controller_contianer{
  height: 80rpx;
  position: absolute;
  left: 0px;
  bottom: -80px;
  z-index: 999;
  width: 100%;
  background: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.2),rgba(0,0,0,0.4));
  display: flex;
  align-items: center;
  transition: all 0.4s ease;
}
.controllerShow{
  bottom: 0;
}
/* 播放控制条 */
.progressBar{
  flex: 1;
  margin: 0 16rpx;
  position: relative;
}
.playSlider{
  margin: 0;
  position: relative;
  z-index: 2;
}
.playProgress{
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
  bottom: 0px;
  right: 0px;
  margin: auto;
  z-index: 1;  
}
/* 播放器控制按钮容器 */
.vudioPlayer-controller{
  text-align: center;
  padding: 0 16rpx 0 30rpx;
}
.controller-button{
  font-size: 56rpx;
  color: #fff;
}
/* 加载动画 */
.weuiLoading {
    width: 50rpx;
    height: 50rpx;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
    display: block;
    animation: weuiLoading 1s steps(12, end) infinite;
}

@-webkit-keyframes weuiLoading {
    0% {
        transform: rotate3d(0, 0, 1, 0deg);
    }

    100% {
        transform: rotate3d(0, 0, 1, 360deg);
    }
}

@keyframes weuiLoading {
    0% {
        transform: rotate3d(0, 0, 1, 0deg);
    }

    100% {
        transform: rotate3d(0, 0, 1, 360deg);
    }
}

/* 播放时间 */
.audio-time{
  font-size: 24rpx;
  color:#fff;
  min-width: 140rpx;
  text-align: center;
  padding: 0 30rpx 0 16rpx;
}
/* 播放底部 */
.play-bt{
  height: calc(100vh - 600rpx);
  overflow: hidden;
}
.play-bt .playContentShowContainer{
  display: block;
  height: calc(100% - 50rpx);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}