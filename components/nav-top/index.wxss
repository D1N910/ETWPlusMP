@import '../../app.wxss';
/* components/nav-top/index.wxss */
/* 顶部阴影 */
.topOuterBorder{
  width: 100%;
  position: absolute;
  left: 0px;
  top: -80px;
  background: -webkit-linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4),rgba(0,0,0,0));
  z-index: 999;
  transition: all 0.4s ease;
}
.topOuterBorderShow{
  top: 0;
}
.navigationController{
  height: 30px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: #fff;
  display: inline-flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 20px;
  margin-left: 10px;
  background: rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}
.navigationController .iconfont {
  font-weight: bolder;
  font-size: 16px;
  display: inline-block;
  width: 100%;
  text-align: center;
  padding: 0 15px;
}
.navigationController .iconfont:nth-child(2n){
  border-left: 1px solid rgba(255, 255, 255, 0.3);
}
.topOuterBorderWhite{
  background:#fff;
}
.navigationBar .topOuterBorderWhite{
  border-color:#ededed;
}
.logo{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  position: absolute;
  z-index: 1;
}